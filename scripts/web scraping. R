    html_text(trim = T)
  DLdate <- read_html(url) %>%
    html_nodes(".grippy-host , .date_flown+ .review-value") %>%
    html_text(trim = T)
  DL <- tibble('score' = DLscore, 'date' = DLdate, 'airline' = 'DL')
  DL <- DL %>% separate(date, c("month", "year")) %>% 
